#!/bin/sh

set -e
cd
echo 'Linking dotfiles'
for file in etc/dotfiles/*; do
    name=`basename $file`
    rm -f ~/.$name
    ln -s $file ~/.$name
done

VUNDLE_DIR=~/etc/vim/bundle/Vundle.vim
if ! [ -d $VUNDLE_DIR ]; then
    git clone https://github.com/gmarik/vundle.git $VUNDLE_DIR
fi

mkdir -p ~/tmp/vim

echo 'Installing vim bundles'
vim -N -u ~etc/vim/plugins.vim +PluginInstall +qall >/dev/null 2>/dev/null
