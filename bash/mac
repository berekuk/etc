# vim: ft=sh
export BLOCKSIZE=1K # can i set this on linux too? will i get confused by it? (see environ(7) for details)
export CLICOLOR=1
export GREP_OPTIONS= # disable GREP_OPTIONS - it conflicts with brew

if [ -f $(brew --prefix)/etc/bash_completion ]; then
  . $(brew --prefix)/etc/bash_completion
fi

# put /usr/local/bin before /usr/bin
export PATH=$(perl -MList::MoreUtils=firstidx -E '@p = split /:/, $ENV{PATH}; $ub = firstidx { $_ eq "/usr/bin" } @p; $ulb = firstidx { $_ eq "/usr/local/bin" } @p; if (defined $ub and defined $ulb and $ub < $ulb) { ($p[$ub], $p[$ulb]) = ($p[$ulb], $p[$ub]) } say join ":", @p')

export PATH=/usr/local/sbin:$PATH
export PATH=/usr/local/share/npm/bin:$PATH
export PATH=/usr/local/heroku/bin:$PATH

# instead of default xterm-color, which is uncompatible with linux screen
# commented because of vim double-buffer drawing bug
#export TERM=xterm

export DOCKER_HOST=tcp://127.0.0.1:4243
