# vim: ft=sh
alias ra='$EDITOR ~/etc/bash/aliases; source ~/etc/bash/aliases'

alias grep='grep --color=tty -d skip --exclude=\*/.svn/\* --exclude=\*.gitignore\*'
alias loadkeys='ssh-add ~/.ssh/keys/github && ssh-add ~/.ssh/keys/gitlab'

alias k='kubectl'

alias vim='emacsclient -n'
alias code='/Applications/Visual\ Studio\ Code.app/Contents/MacOS/Electron'

alias psh='pipenv shell'
alias cdc='cd ~/coding/kocherga/core'

# some common ls aliases
alias ll='ls -l'
alias la='ls -A'
alias l='ls -CF'

# git aliases
alias gst='git status -s'
alias gc='git commit'
alias gd='git diff'
alias gdc='git diff --color-words'
alias ga='git add'
alias gco='git checkout'

# old/unused
alias ro='routine'
alias i='inbox'
