# vim: ft=sh

# some common ls aliases
alias ll='ls -l'
alias la='ls -A'
alias l='ls -CF'

# git aliases
alias gst='git status -s'
alias gc='git commit'
alias gd='git diff'
alias gdc='git diff --color-words'
alias ga='git add'
alias gco='git checkout'
alias vs='vagrant ssh'
alias vp='vagrant provision'

alias vu='vagrant up'
alias vs='vagrant ssh'

alias ra='$EDITOR ~/etc/bash/aliases; source ~/etc/bash/aliases'
